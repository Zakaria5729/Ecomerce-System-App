<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zakaria.myproducts">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProductListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductAddActivity"
            android:label="Add Product"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".ItemsActivity"
            android:label="Choose Product"
            android:parentActivityName=".ProductAddActivity" />
        <activity
            android:name=".EmailActivity"
            android:label="Send Message"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".ProductDetailsActivity"
            android:label="Product Detail"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".FaqActivity"
            android:label="Frequently Asked Questions"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".SignUpActivity"
            android:label="Sign Up"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".PhoneVerificationActivity"
            android:label="Phone Number Verification"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".UpdateProfileActivity"
            android:label="Update Profile"
            android:parentActivityName=".ProductListActivity" />
        <activity
            android:name=".PostAdActivity"
            android:label="Add Product Information"
            android:parentActivityName=".ItemsActivity" />
        <activity
            android:name=".PasswordChangeActivity"
            android:parentActivityName=".LoginActivity" />
    </application>

</manifest>